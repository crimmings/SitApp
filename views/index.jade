extends layout

block content
  h1= title
  p Welcome to SIT: Take My Kids

  //WRAPPER
  #wrapper
    //SITTER INFO
    #sitterInfo
      h2 Babysitter Info
      p
        strong Name:
          <span id='sitterInfoName'></span>
        br
        strong Phone:
          <span id='sitterInfoPhone'></span>
        br
        strong E-Mail:
          <span id='sitterInfoEmail'></span>
        br
    // /SITTER INFO

    //SITTER LIST
    h2 Babysitters
    #sitterList
      table
        thead
          th Babysitter
          th Phone
          th Email
          th Delete / Update?
        tbody
    // SITTER LIST

    //ADD SITTER
  #addSitterPanel
    h2 Add A Babysitter
    #addSitter
        fieldset
          input#inputSitterName(type='text', placeholder='Babysitter')
          input#inputSitterPhone(type='text', placeholder='Phone')
          input#inputSitterEmail(type='text', placeholder='E-Mail')
          br
          button#btnAddSitter  Add Sitter
    // /ADD SITTER

  //UPDATE SITTER
  #updateSitterPanel
    h2 Update A Babysitter
    #updateSitter
      fieldset
        input#updateSitterName(type='text', placeholder='Babysitter')
        input#updateSitterPhone(type='text', placeholder='Phone')
        input#updateSitterEmail(type='text', placeholder='E-Mail')
        br
        button#btnUpdateSitter Add Sitter
        button#btnCancelUpdateSitter Cancel
    // /UPDATE SITTER




  // WRAPPER

